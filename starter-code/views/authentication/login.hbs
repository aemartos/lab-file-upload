
<h2>Login</h2>
<div class="">
  <div class="">
    <form action="/login" method="post" id="form-container">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" class="" placeholder="JonSnow">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="" placeholder="password" readonly onfocus="if (this.hasAttribute('readonly')) {
          this.removeAttribute('readonly');
          this.blur(); this.focus();}"/>
      </div>

      {{#if message }}
        <div class="error-message">{{message}}</div>
      {{/if}}

      <button class="loginBut" type="submit">Login</button>
    </form>
  </div>
</div>
